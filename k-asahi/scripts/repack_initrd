TMP=/tmp/Irepack
rm -rf $TMP
mkdir -p $TMP

INITRD=/boot/initrd-armv?

cd $TMP
zcat $INITRD | cpio -di
echo "Unpacked"
read -p "now cd $TMP do your thing then press ENTER to repack"

# Repack OS initrd:
find . | cpio -o -H newc | gzip -9fv > $INITRD

# Repack installer initrd:
#find . | cpio -o -H newc | gzip -9fv > /tmp/initrd-armv8.img
